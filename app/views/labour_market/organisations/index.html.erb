<div class="w-full max-w-2xl lg:grid lg:max-w-7xl lg:grid-cols-[1fr_max-content] lg:gap-x-8 justify-start">
  <div class="lg:max-w-lg flex flex-col">

    <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
      <% if @organisation_type == :national_union %>
        National Unions
      <% elsif @organisation_type == :employer_association %>
        Employer Associations
      <% elsif @organisation_type == :local_union %>
        Local Unions
      <% end %>
    </h1>

    <ol class="list-disc mt-4 ml-4">
      <% @organisations.each do |organisation| %>
        <li>
          <a
            class="text-sky-600 underline"
            <% if @organisation_type == :national_union %>
              href="<%= national_union_path(organisation) %>"
            <% elsif @organisation_type == :employer_association %>
              href="<%= employer_association_path(organisation) %>"
            <% elsif @organisation_type == :local_union %>
              href="<%= local_union_path(organisation) %>"
            <% end %>
          ><%= organisation.name %></a>
        </li>
      <% end %>
    </ol>

  </div>

  <div class="mt-10 lg:col-start-2 lg:row-span-2 lg:mt-0 lg:self-center max-w-full overflow-hidden">
    <div class="aspect-h-1 aspect-w-1 overflow-hidden rounded-lg max-w-sm">
      <img alt="" class="h-full w-full object-cover object-center" src="https://placehold.co/512x512" />
    </div>
  </div>

</div>
